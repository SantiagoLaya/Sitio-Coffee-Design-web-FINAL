<div class="container-fluid">
 <div class="container" style="margin:100px auto;">
  <div class="row g-3">
   <div class="col-sm-10">
    <form action="/admin/login" method="post">

     <div class="form-group">
      <label for="usuario">Usuario</label>
      <input type="text" class="form-control placeholder-a" id="usuario" aria-describedby="emailHelp" name="usuario">
     </div>

     <div class="form-group">
      <label for="password">Password</label>
      <input type="password" class="form-control placeholder-a" id="password" name="password">
     </div>

     <button type="submit" class="button2 button">Iniciar Sesión</button>

    </form>
    {{#if error}}
     <p class="nullagregar">¡Usuario o contraseña incorrectos!</p>
    {{/if}}
   </div>
  </div>
 </div>
 </div>